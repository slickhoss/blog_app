<h3>Adding new article </h3>

<div class='row'>
    <div class='col-md-12'>
        <%= form_for(@article, :html => {class: 'form-horizontal', role: 'form'}) do |a| %>
        <% if @article.errors.any? %>
            <div class='row'>
                <div class='col-md-8 col-md-offset-2'>
                    <div class='panel panel-danger'>
                        <div class='panel-heading'>    
                            <h2 class='panel-title'> 
                                <%= pluralize(@article.errors.count, 'error')%>
                                prohibited this <%= @article.class %> from being saved:
                            </h2>
                            <div class='panel-body'>            
                                <ul>
                                    <% @article.errors.full_messages.each do |msg| %>
                                        <li> <%= msg %> </li>
                                    <% end %>
                                <ul>  
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        <% end %>
        <div class='form-group'>
           <div class='control-label col-md-1'>
                <%= a.label :title %>
            </div>
            <div class='col-md-11'>
                <%= a.text_field :title, class: 'form-control', placheolder:'Title of article', autofocus: true %>
            </div>
        </div>


        <div class='form-group'>
            <div class='control-label col-md-1'>
                <%= a.label :body %>
            </div>
            <div class='col-md-11'>
                <%= a.text_area :body, class: 'form-control', placheolder:'Body of article'%>
            </div>
        </div>
        <%= a.submit 'Create Article', class: 'btn btn-primary btn-lg pull-right'%>
        <% end %>
    </div>
</div>