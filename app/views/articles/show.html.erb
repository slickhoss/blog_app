<article class='detail-article'>
    <div class='well well-lg'>
        <h1 class='article-detail-title text-primary'>
            <%= @article.title %>
        </h1>

        <div class='glyphicon glyphicon-calender' id='article-date'>
            <%= @article.created_at.strftime("%b %d %Y")%>
        </div> <br>
        
        <div class='article-body'>
            <%= @article.body %>
        </div>
        <% if current_user == @article.user %>
            <div class='edit-delete'>
                <%= link_to 'Edit Article', edit_article_path(@article), class: 'btn btn-primary btn-lg btn-space' %>
                <%= link_to 'Delete Article', article_path(@article),method: :delete, class: 'btn btn-danger btn-lg btn-space', data: {confirm: 'Are you sure'} %>
            </div>
        <% end %>
</article class>

<hr>

<div class='col-md-12'>
    <%= form_for [@article, @comment], remote: true, :html => {class: 'form-horizontal', route: 'form'} do |f| %>
        <% if @comment.errors.any? %>
            <div class='panel panel-danger col-md-offset-1'>
                <div class='panel-heading'>
                    <h2 class='panel-title'> 
                        <%= pluralize(@comment.errors.count, 'error') %>
                        prohibited this comment from being saved:
                    </h2>
                    <div class='panel-body'>
                        <ul>
                            <% @comment.errors.full_messages.each do |msg| %>
                            <li> <%= msg %> </li>
                            <% end %>
                        </ul>
                    </div>
                </div>
            </div>
        <% end %>
        <div class='form-group'>
            <div class='control-label col-md-2'>
                <%= f.label :body, 'New Comment' %>
            </div>
            <div class='col-md-10'>
                <%= f.text_area :body, rows: 6, class: 'form-control', placeholder: 'Your comment' %>
            </div>
        </div>
        <div class='form-group'>
            <div class='col-md-offset-2 col-md-10'>
                <%= f.submit 'Add Comment', class: 'btn btn-primary btn-lg pull-right'%>
            </div>
        </div>
    <%end%>
</div>

<div class='col-md-12'>
    <header>
        <h2>Comments:</h2>
    </header>
    <div class='col-md-10'>
        <% if @article.comments.any? %>
            <div id='messages'>
                <% persisted_comments(@comments).each do |comment| %>
                    <div class='well'>
                        <div class='comment-body'>
                            <%= comment.body %>
                        </div>
                        <div class='comment-time'>
                            <%= time_ago_in_words(comment.created_at) %>
                            ago by <%= comment.user.email%>
                        </div>
                    </div>
                    <hr>
                <% end %>
            <% else %>
                There are no comments to show
            <% end %>
        </div>
    </div>
</div>