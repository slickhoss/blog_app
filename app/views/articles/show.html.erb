<article class='detail-article'>
    <div class='well well-lg'>
        <h1 class='article-detail-title text-primary'>
            <%= @article.title %>
        </h1>

        <div class='glyphicon glyphicon-calender' id='article-date'>
            <%= @article.created_at.strftime("%b %d %Y")%>
        </div> <br>
        
        <div class='article-body'>
            <%= @article.body %>
        </div>
        <% if current_user == @article.user %>
            <div class='edit-delete'>
                <%= link_to 'Edit Article', edit_article_path(@article), class: 'btn btn-primary btn-lg btn-space' %>
                <%= link_to 'Delete Article', article_path(@article),method: :delete, class: 'btn btn-danger btn-lg btn-space', data: {confirm: 'Are you sure'} %>
            </div>
        <% end %>
    </div>
</article class>