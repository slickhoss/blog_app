<div class='row'>
    <div class='col-md-10 col-md-offset-1'>
        <% flash.each do |type, message| %>
        <% if type === 'alert'%>
        <div class='alert alert-danger'>
            <a href='#' class='close' data-dismiss='alert'>&#215;</a>
            <%= message %>
        </div>
        <% else %>
        <div class="alert alert-info" role='alert'>
            <a href='#' class='close' data-dismiss='alert'>&#215;</a>
            <%= message %>
        </div>
        <% end %>
        <% end %>
    </div>
</div>